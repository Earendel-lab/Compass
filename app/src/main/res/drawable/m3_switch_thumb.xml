<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State: Shifted left by adding right inset to create the gap -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Transparent container -->
            <item>
                <shape android:shape="rectangle">
                    <size android:width="28dp" android:height="28dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- Knob shifted left: 2dp left, 2dp top, 6dp right, 2dp bottom (total 28x28 container) -> 24x24 visible area minus padding -->
            <!-- Adjusted for 16dp thumb (matches previous OFF size) with gap from right.
                 Insets: Left 2dp, Right 10dp (Total 28).
            -->
            <item android:left="2dp" android:top="6dp" android:right="10dp" android:bottom="6dp">
                <shape android:shape="oval">
                    <size android:width="16dp" android:height="16dp" />
                    <!-- Monochrome: White checkmark/icon or just white knob -->
                    <solid android:color="@color/pure_white" />
                </shape>
            </item>
            <!-- Checkmark icon -->
            <item android:left="2dp" android:top="6dp" android:right="10dp" android:bottom="6dp" 
                  android:drawable="@drawable/ic_check" android:width="10dp" android:height="10dp" android:gravity="center">
            </item>
        </layer-list>
    </item>

    <!-- Default (Unchecked) State: Centered -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="28dp" android:height="28dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <!-- OFF State: "More smaller". Reduced to 10dp.
                 Centered in 28dp container: Padding (28-10)/2 = 9dp.
            -->
            <item android:left="9dp" android:top="9dp" android:right="9dp" android:bottom="9dp">
                <shape android:shape="oval">
                    <size android:width="10dp" android:height="10dp" />
                    <solid android:color="@color/gray_light" /> <!-- Gray when off -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
