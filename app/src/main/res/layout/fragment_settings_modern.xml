<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="24dp"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <!-- Compass Card -->
        <LinearLayout
            android:id="@+id/card_compass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/island_horizontal_margin"
            android:layout_marginEnd="@dimen/island_horizontal_margin"
            android:layout_marginTop="12dp"
            android:background="@drawable/island_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_compass"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_compass"
                    android:tint="?attr/colorOnBackground"
                    android:contentDescription="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_compass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/compass"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                    <TextView
                        android:id="@+id/summary_compass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configure compass behavior"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:alpha="0.8"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Use True North"
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnBackground" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_true_north"
                        style="?android:attr/switchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showText="false"
                        android:focusable="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Haptic Feedback"
                        android:textSize="15sp"
                        android:textColor="?attr/colorOnBackground" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_haptic"
                        style="?android:attr/switchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:showText="false"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Display Card -->
        <LinearLayout
            android:id="@+id/card_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/island_horizontal_margin"
            android:layout_marginEnd="@dimen/island_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@drawable/island_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_display"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_display_settings"
                    android:tint="?attr/colorOnBackground"
                    android:contentDescription="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/display"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme and appearance settings"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:alpha="0.8"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_night_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/radio_follow_system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/night_mode_follow_system"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:buttonTint="?attr/colorOnBackground"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radio_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/night_mode_no"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:buttonTint="?attr/colorOnBackground"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radio_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/night_mode_yes"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:buttonTint="?attr/colorOnBackground" />

            </RadioGroup>

        </LinearLayout>

        <!-- Rotation Card -->
        <LinearLayout
            android:id="@+id/card_rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/island_horizontal_margin"
            android:layout_marginEnd="@dimen/island_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@drawable/island_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon_rotation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_screen_rotation"
                    android:tint="?attr/colorOnBackground"
                    android:contentDescription="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_rotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rotation_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/summary_rotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rotation_summary"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:alpha="0.8"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Allow Rotation"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_rotation"
                    style="?android:attr/switchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showText="false"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- About Card -->
        <LinearLayout
            android:id="@+id/card_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/island_horizontal_margin"
            android:layout_marginEnd="@dimen/island_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@drawable/island_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/icon_about"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_about"
                    android:tint="?attr/colorOnBackground"
                    android:contentDescription="" />

                <TextView
                    android:id="@+id/title_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/author_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/author_name"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/license_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/license_name"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/third_party_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/third_party_licenses"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/source_code_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/source_code_name"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutline"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>