<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/island_horizontal_margin"
    android:layout_marginEnd="@dimen/island_horizontal_margin"
    android:layout_marginTop="@dimen/island_vertical_gap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/island_background"
        android:padding="@dimen/island_internal_padding"
        android:animateLayoutChanges="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="@dimen/preference_icon_size"
            android:layout_height="@dimen/preference_icon_size"
            android:layout_marginEnd="16dp"
            android:tint="?attr/preferenceIconTint"
            android:contentDescription="" />

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
