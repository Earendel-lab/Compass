<resources>

    <style name="Base.Theme.App" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Preference Refinements -->
        <item name="preferenceCategoryStyle">@style/Preference.Category.App</item>
        <item name="android:listDivider">@null</item>
        <item name="android:divider">@null</item>
        <item name="preferenceIconTint">@color/pure_black</item>
        <item name="preferenceStyle">@style/Widget.App.Preference</item>
        <item name="switchPreferenceCompatStyle">@style/Widget.App.Preference.Switch</item>
        <item name="checkBoxPreferenceStyle">@style/Widget.App.Preference</item>
        <item name="dialogPreferenceStyle">@style/Widget.App.Preference</item>
        <item name="editTextPreferenceStyle">@style/Widget.App.Preference</item>
        <item name="listPreferenceStyle">@style/Widget.App.Preference</item>
        <item name="preferenceInformationStyle">@style/Widget.App.Preference</item>

        <!-- Material 3 Expressive Switch Styles -->
        <item name="android:switchStyle">@style/Widget.App.Switch</item>

        <!-- Force Monochrome Accents -->
        <item name="colorControlNormal">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlActivated">?attr/colorOnBackground</item>
        <item name="colorControlHighlight">?attr/colorOutline</item>
        <item name="colorAccent">?attr/colorOnBackground</item>

        <!-- Force Surface/Background Monochrome -> use expressive palette -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorSurfaceVariant">@color/island_light</item>
        <item name="elevationOverlayEnabled">false</item>

        <!-- Rounded Menus and Dialogs -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:thumb">@drawable/m3_switch_thumb</item>
        <item name="android:track">@drawable/m3_switch_track</item>
        <item name="thumbTint">@color/pure_white</item>
        <item name="trackTint">@color/pure_black</item>
        <item name="trackDecorationTint">@color/pure_white</item>
        <!-- Proportions enforced by thumb/track drawables (avoid unknown style attrs) -->
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">32dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">32dp</item>
    </style>
    <style name="Theme.App" parent="Base.Theme.App">
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <!-- Strict Text Colors -->
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorHint">?attr/colorOutline</item>

        <!-- Ghost Line Cleanup & Menu Rounding -->
        <item name="android:windowTransitionBackgroundFadeDuration">0</item>
        <item name="android:listDivider">@null</item>
        <item name="android:defaultFocusHighlightEnabled">false</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@null</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Preference.Category.App" parent="@style/Preference.Category">
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="android:layout">@layout/preference_category_app</item>
        <item name="iconTint">?attr/preferenceIconTint</item>
    </style>

    <style name="Widget.App.Preference" parent="@style/Preference">
        <item name="iconTint">?attr/preferenceIconTint</item>
        <item name="android:textAppearanceListItem">@style/TextAppearance.App.Preference.Title</item>
        <item name="android:textAppearanceListItemSmall">@style/TextAppearance.App.Preference.Summary</item>
    </style>

    <style name="Widget.App.Preference.Switch" parent="@style/Preference.SwitchPreferenceCompat">
        <item name="iconTint">?attr/preferenceIconTint</item>
        <item name="android:textAppearanceListItem">@style/TextAppearance.App.Preference.Title</item>
        <item name="android:textAppearanceListItemSmall">@style/TextAppearance.App.Preference.Summary</item>
        <!-- Ensure preference switches use the app's M3 expressive switch drawables -->
        <item name="android:switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="TextAppearance.App.Preference.Title" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Preference.Summary" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.7</item>
    </style>
</resources>
